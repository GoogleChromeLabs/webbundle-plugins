{
  "name": "webbundle-webpack-plugin",
  "version": "0.1.1",
  "description": "Webpack plugin to generate WebBundle output.",
  "keywords": [
    "webpack",
    "plugin",
    "web-bundle",
    "isolated-web-app"
  ],
  "type": "module",
  "main": "index.cjs",
  "scripts": {
    "prepack": "npm run build && cp ../../LICENSE ./LICENSE",
    "postpack": "rm -f ./LICENSE",
    "build": "rm -rf lib && esbuild --bundle --packages=external --format=cjs --outfile=lib/index.cjs src/index.js --platform=node --legal-comments=inline --sourcemap"
  },
  "author": "Kunihiko Sakamoto <ksakamoto@chromium.org>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/GoogleChromeLabs/webbundle-plugins.git",
    "directory": "packages/webbundle-webpack-plugin"
  },
  "peerDependencies": {
    "webpack": ">=4.0.1 <6.0.0"
  },
  "dependencies": {
    "mime": "^2.4.4",
    "wbn": "0.0.9",
    "wbn-sign": "0.0.1"
  },
  "devDependencies": {
    "esbuild": "^0.17.15",
    "memory-fs": "^0.5.0",
    "webpack": "^5.74.0"
  },
  "engines": {
    "node": ">= 14.0.0"
  }
}
