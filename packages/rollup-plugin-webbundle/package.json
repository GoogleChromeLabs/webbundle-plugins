{
  "name": "rollup-plugin-webbundle",
  "version": "0.1.1",
  "description": "Rollup plugin to generate WebBundle output.",
  "keywords": [
    "rollup-plugin",
    "web-bundle",
    "isolated-web-app"
  ],
  "main": "lib/index.js",
  "scripts": {
    "prepack": "npm run build && cp ../../LICENSE ./LICENSE",
    "postpack": "rm -f ./LICENSE",
    "build": "esbuild --bundle --packages=external --format=esm --outfile=lib/index.js src/index.js --platform=node --legal-comments=inline"
  },
  "type": "module",
  "author": "Kunihiko Sakamoto <ksakamoto@chromium.org>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/GoogleChromeLabs/webbundle-webpack-plugin.git",
    "directory": "packages/rollup-plugin-webbundle"
  },
  "peerDependencies": {
    "rollup": ">=1.21.0 <4.0.0"
  },
  "dependencies": {
    "mime": "^2.4.4",
    "wbn": "0.0.9",
    "wbn-sign": "0.0.1"
  },
  "devDependencies": {
    "rollup": "^2.76.0"
  },
  "engines": {
    "node": ">= 14.0.0"
  }
}
