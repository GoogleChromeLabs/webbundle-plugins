{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "es2020",
    "target": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "declaration": true,
    "newLine": "lf",
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true
  },
  "include": ["packages/**/*"],
  "exclude": ["**/node_modules", "**/lib"]
}
